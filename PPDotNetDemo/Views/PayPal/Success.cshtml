
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<link href="~/Content/bootstrap.css" rel="stylesheet" id="bootstrap-css" />
	<script src="~/Scripts/bootstrap.min.js"></script>
	<title>PayPal ASP.Net MVC Demo</title>
</head>
<body>
	<div class="container">
		<div class="row text-center">
			<div class="col-sm-6 col-sm-offset-3">
				<br><br> <h2 style="color:#0fad00">Success</h2>
				<h3>Dear, @ViewBag.GivenName @ViewBag.SurName</h3>
				<p style="font-size:20px;color:#5C5C5C;">
					Thank you for purchasing our products. Hope you have a great shopping experience!
				</p>
				<h4>Your order ID: <strong> @ViewBag.OrderId</strong></h4>
				<br><br>
			</div>

		</div>
	</div>
</body>
</html>
